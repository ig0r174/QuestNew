<Page x:Class="Quest2.Level1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Quest2"
      mc:Ignorable="d" 
      d:DesignHeight="279" d:DesignWidth="609"
      Title="Level1">

    <Grid x:Name="Body">
        <Button x:Name="Level1Button" Content="Кнопочка" Margin="0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="140" Height="36" Background="#FF4F62FD" Foreground="White" BorderBrush="{x:Null}" FontWeight="Bold" Click="Level1_Button_Click" Cursor="Hand">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="18"/>
                </Style>
            </Button.Resources>
        </Button>
        <Image x:Name="BombImage" HorizontalAlignment="Center" Height="68" Margin="0" VerticalAlignment="Bottom" Width="177" Source="bomb_bg.png"/>
        <Label x:Name="TimerLabel" Content="00:00:10" FontFamily="Digital-7" Foreground="#FF0A0A0A" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="250,0,251,17" FontWeight="Bold" FontSize="22" Width="108" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</Page>
